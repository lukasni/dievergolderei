<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      Formular enth√§lt Fehler und konnte nicht gespeichert werden.
    </div>
  <% end %>

  <%= label f, :label, "Tag" %>
  <%= text_input f, :label %>
  <%= error_tag f, :label %>

  <%= label f, :times, "Zeit" %>
  <%= textarea f, :times %>
  <%= error_tag f, :times %>

  <%= label f, :active, "Aktiv" %>
  <%= checkbox f, :active %>
  <%= error_tag f, :active %>

  <%= label f, :list_position, "Sortierung" %>
  <%= number_input f, :list_position %>
  <%= error_tag f, :list_position %>

  <div>
    <%= submit "Save" %>
  </div>
<% end %>

<div class="md:flex" role="blog">
    <section class="md:w-2/3">
        <%= for post <- @posts do %>
          <%= render @view_module, "post.html", post: post, conn: @conn %>
        <% end %>
    </section>
    <nav role="navigation" class="md:w-1/3 md:pl-4">
        <h4 class="text-2xl">Archiv</h4>
        <ul class="mt-2">
          <li><%= link "Neueste BeitrÃ¤ge", to: Routes.post_path(@conn, :blog), class: "hover:underline text-dvblue-500" %></li>
        <%= for {year, months} <- Enum.group_by(@months, & &1.year) do %>
          <li class="mt-2"><%= year %>
            <ul class="ml-4 list-disc list-inside">
              <%= for month <- months do %>
              <li><%= month_link(@conn, month, class: "hover:underline text-dvblue-500") %></li>
              <% end %>
            </ul>
          </li>
        <% end %>
        </ul>
    </nav>
</div>

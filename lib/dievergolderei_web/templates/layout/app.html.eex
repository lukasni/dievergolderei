    <title>Die Vergolderei</title>
    <link rel="stylesheet" href="<%= Routes.static_path(@conn, "/css/app.css") %>"/>
  </head>
  <body>
    <header class="container">
      <section class="main-nav">
        <nav role="navigation" class="row">
            <div class="column"><a href="#">Start</a></div>
            <div class="column"><a href="#">Kontakt</a></div>
            <div class="column"><a href="#">Impressionen</a></div>
            <div class="column"><a href="#">Geschichte</a></div>
            <div class="column"><a href="#">Blog</a></div>
        </nav>
      </section>
      <img src="<%= Routes.static_path(@conn, "/images/header.svg") %>" alt="Logo Die Vergolderei">

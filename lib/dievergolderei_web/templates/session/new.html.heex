<h1 class="text-2xl font-bold">Login</h1>

<.simple_form :let={f} for={@conn} action={~p"/sessions"} as={:session}>
  <.input field={f[:email]} type="email" label="E-Mail"/>
  <.input field={f[:password]} type="password" label="Passwort"/>

  <:actions>
    <.button>Anmelden</.button>
  </:actions>
</.simple_form>
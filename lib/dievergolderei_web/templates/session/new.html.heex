<h1 class="text-2xl font-bold">Login</h1>

<%= form_for @conn, ~p"/sessions", [as: :session], fn f -> %>
  <%= text_input(f, :email, placeholder: "E-Mail", class: "form-input block w-full mt-4") %>

  <%= password_input(f, :password, placeholder: "Password", class: "form-input block w-full mt-4") %>

  <%= submit("Anmelden", class: "button button-dvblue mt-4 w-full") %>
<% end %>
